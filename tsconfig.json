{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "lib": ["DOM.Iterable", "DOM", "ESNext"],
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "rootDirs": ["src"],
        "outDir": "build",
        "module": "CommonJS"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "build"]
}
